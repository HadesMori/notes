<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Notes" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/secondary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.Notes" parent="Base.Theme.Notes" />

    <style name="title" parent="Base.Theme.Notes">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="body" parent="Base.Theme.Notes">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="menuItem" parent="Base.Theme.Notes">
        <item name="itemIconTint">@color/accent</item>
        <item name="itemTextColor">@color/accent</item>
    </style>

</resources>